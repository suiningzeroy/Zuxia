<%= form_for(:session, :url => sessions_path) do |f| %>
     <div class = "control-group">
     <%= f.label :email %>
     <%= f.text_field :email, :class =>"input-large" %>
     </div>
     <div class = "control-group">
     <%= f.label :password %>
     <%= f.password_field :password, :class =>"input-large"%>
